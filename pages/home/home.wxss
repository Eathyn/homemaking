.container {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.tabs {
  display: flex;
  padding: 30prx 0;
  background-color: #FFFFFF;
  align-items: center;
  height: 126rpx;
  box-sizing: border-box;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tab-label {
  color: #888888;
  white-space: nowrap;
}

.active-tab {
  color: #333333;
  font-weight: bold;
}

.divider {
  margin-top: 10rpx;
  height: 6rpx;
  width: 50rpx;
  background-color: #F3D066;
}

.category {
  padding: 30rpx 0 30rpx 30rpx;
}

.category-swiper-item {
  border-radius: 20rpx;
  width: 300rpx;
  height: 150rpx;
  background-image: linear-gradient(to right, #E68D44, #EB6D59);
}

.category-name {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  color: #FFFFFF;
}
