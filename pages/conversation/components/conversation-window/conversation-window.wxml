<view class="container">
  <view class="message-list">
    <view
      wx:for="{{ messageList }}"
      wx:key="index"
    >
      <i-message></i-message>
    </view>
  </view>

  <view class="action-bar">
    <i-icon
      name="picture"
      bind:tap="handleSendImage"
    />
    <textarea bind:tap="handleInput"></textarea>
    <i-button
      shape="circle"
      size="mini"
      bind:tap="handleSend"
    >
      发送
    </i-button>
    <i-safe-area area="bottom" />
  </view>
</view>
