<view
  class="container"
  wx:if="{{ sdkReady }}"
>
  <i-conversation-window
    targetUserId="{{ targetUserId }}"
    service="{{ service }}"
  />
</view>
<view wx:else>
  <i-show-status
    top="500"
    show
    content="会话加载失败"
  >
    <i-button
      shape="semicircle"
      bind:tap="handleLogin"
    >
      点击刷新
    </i-button>
  </i-show-status>
</view>
