.container {
  display: flex;
  flex-direction: column;
  min-height: 100%;
}

.tabs {
  display: flex;
  padding: 30rpx 0;
  background-color: #FFFFFF;
  align-items: center;
  position: sticky;
  top: 0;
  z-index: 99;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tab-label {
  color: #888888;
  white-space: nowrap;
}

.active-tab {
  color: #333333;
  font-weight: bold;
}

.divider {
  margin-top: 10rpx;
  height: 6rpx;
  width: 50rpx;
  background-color: #F3D066;
}

.tab-panel {
  flex: 1;
}
